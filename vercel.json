    {
      "version": 2,
      "builds": [
        {
          "src": "server/main.js",
          "use": "@vercel/node"
        },
        {
          "src": "client/package.json",
          "use": "@vercel/static-build",
          "config": {
            "distDir": "dist"
          }
        }
      ],
      "rewrites": [
        {
          "source": "/api/(.*)",
          "destination": "/server/main.ts"
        },
        {
          "source": "/(.*)",
          "destination": "/client/index.html"
        }
      ]
    }
